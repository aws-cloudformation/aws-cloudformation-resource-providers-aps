{
  "typeName": "AWS::APS::Workspace",
  "description": "Resource Type definition for AWS::APS::Workspace",
  "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
  "properties": {
    "WorkspaceId": {
      "description": "Required to identify a specific APS Workspace.",
      "type": "string",
      "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_-]{1,99}\\Z",
      "minLength": 1,
      "maxLength": 100
    },
    "Alias": {
      "description": "AMP Workspace alias.",
      "type": "string",
      "minLength": 0,
      "maxLength": 100
    },
    "Arn": {
      "description": "Workspace arn.",
      "type": "string",
      "pattern": "^arn:\b(aws|aws-us-gov|aws-cn)\b:aps:[a-z0-9-]+:[0-9]+:workspace/[a-zA-Z0-9-]+$",
      "minLength": 1,
      "maxLength": 128
    },
    "PrometheusEndpoint": {
      "description": "AMP Workspace prometheus endpoint",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [],
  "readOnlyProperties": [
    "/properties/WorkspaceId",
    "/properties/Arn",
    "/properties/PrometheusEndpoint"
  ],
  "primaryIdentifier": [
    "/properties/Arn"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "aps:CreateWorkspace"
      ]
    },
    "read": {
      "permissions": [
        "aps:DescribeWorkspace"
      ]
    },
    "update": {
      "permissions": [
        "aps:UpdateWorkspaceAlias"
      ]
    },
    "delete": {
      "permissions": [
        "aps:DeleteWorkspace"
      ]
    },
    "list": {
      "permissions": [
        "aps:ListWorkspaces"
      ]
    }
  }
}
